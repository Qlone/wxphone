/* pages/bill_list/bill.wxss */
.item-block{
  margin-left: 30px;
  margin-right: 30px;
  margin-bottom: 10px;
  height: 80px;
  width: auto
}
.box-shadow-3{  
  -webkit-box-shadow:0 0 10px rgba(0, 204, 204, .5);  
  -moz-box-shadow:0 0 10px rgba(0, 204, 204, .5);  
  box-shadow:0 0 10px rgba(0, 204, 204, .5);  
}    
.touch-view{
  height:100%;
  width:100%;
  position: fixed;

}
.item-money-view{
  height: 100%;
  width: 100%;
  
}
.item-money{
  position:relative;
  top: 18px;
  margin-left: 5px;
  font-size: 30px;
  color: #76EE00;
  font-weight:bold;
}
.view-row{
  display: flex;
  flex-direction:row;
}
.item-block-right{
  height: 100%;
  width: 120px;
 
}
.item-type-view{
  height: fit-content;
  width: 100px;
  margin-top: 18px;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 23px; 
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.item-data-view{
  height: fit-content;
  width: 200px;
  color: #C0C0C0;
  text-align: center;
  font-size: 14px;
  margin-top: 8px;
  position: relative;
  right: 50px;
}